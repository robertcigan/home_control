- page_title "Boards"

- content_for(:action_button) do
  = link_to fa_icon("plus", class: "pr-2", text: "Add Board"), new_board_path, class: "btn btn-primary", data: { toggle: "ajax-modal", class: "modal-md", title: "Add Board" }

= simple_form_for @search, url: boards_path, remote: true, method: :get, wrapper: :inline_form, html: { id: "board_search", class: "form-inline" } do |form|
  = form.search_field :name_or_ip_cont, placeholder: "Search by Name or IP", class: "form-control search-field mb-2 mr-2"
  .mr-2.mb-2
    = render "common/per_page"

#boards
  = render "boards"
  
:javascript
  HomeControl.Boards.initIndex();