- page_title "Panels"

- content_for(:action_button) do
  = link_to fa_icon("plus", class: "pr-2", text: "Add Panel"), new_panel_path, class: "btn btn-primary", data: { toggle: "ajax-modal", class: "modal-md", title: "Add Panel" }

= simple_form_for @search, url: panels_path, remote: true, method: :get, wrapper: :inline_form, html: { id: "panel_search", class: "form-inline" } do |form|
  = form.search_field :name_cont, placeholder: "Search by Name", class: "form-control search-field mb-2 mr-2"
  .mr-2.mb-2
    = render "common/per_page"

#panels
  = render "panels"

:javascript
  HomeControl.Panels.initIndex();